{
  "manifest_version": 2,
  "name": "Kitsu Updater",
  "description": "Automatically update your Kitsu.io library from streaming sites",
  "version": "0.1.9",
  "permissions": [
    "contextMenus",
    "notifications",
    "tabs",
    "*://9anime.to/*",
    "*://animehaven.to/*",
    "*://twist.moe/*",
    "*://www.crunchyroll.com/*",
    "*://www.daisuki.net/*",
    "*://www.funimation.com/*",
    "*://www.hulu.com/*",
    "*://kissanime.ru/*",
    "*://www.masterani.me/*",
    "*://moetube.net/*",
    "*://www.netflix.com/*",
    "*://www.viz.com/*"
  ],
  "background": { "scripts": [ "js/background.js" ] },
  "options_page": "html/options.html",
  "content_scripts": [
    {
      "matches": [
        "*://9anime.to/*",
        "*://animehaven.to/*",
        "*://twist.moe/*",
        "*://www.crunchyroll.com/*",
        "*://www.daisuki.net/*",
        "*://www.funimation.com/*",
        "*://www.hulu.com/*",
        "*://kissanime.ru/*",
        "*://www.masterani.me/*",
        "*://moetube.net/*",
        "*://www.netflix.com/*",
        "*://www.viz.com/*"
      ],
      "js": [ "js/content.js" ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png"
    },
    "default_title": "Kitsu Updater",
    "default_popup": "html/options.html"
  }
}
